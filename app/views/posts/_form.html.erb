    <%= form.file_field :image, style: "width: 100%;" %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :video, style: "display: block; font-weight: bold;" %>
    <%= form.file_field :video, style: "width: 100%;" %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
