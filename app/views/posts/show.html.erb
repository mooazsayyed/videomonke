<p style="color: green"><%= notice %></p>

<%= render @post %>

<div>
  <% if current_user == @post.user %> 
    <%= link_to "Edit this post", edit_post_path(@post) %> |
    <%= link_to "Back to posts", posts_path %>
    <%= button_to "Destroy this post", @post, method: :delete, data: { confirm: "Are you sure?" } %>
  <% else %>
    <!-- Show download link for the video -->
    <% if @post.video.attached? %>
      <%= link_to "Download Video", rails_blob_path(@post.video, disposition: "attachment"), class: "btn btn-primary" %>
    <% else %>
      <p>No video available for download.</p>
    <% end %>
  <% end %>
</div>
